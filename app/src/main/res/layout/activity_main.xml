<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jacob.calculator.MainActivity"
    android:background="#aaaaaa">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/resultTextView"
        android:layout_alignParentTop="true"
        android:autoText="false"
        android:elegantTextHeight="false"
        android:enabled="false"
        android:height="100dp"
        android:password="false"
        android:textSize="90dp"
        android:gravity="top|end"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/button"
        android:background="#ffae00"
        android:height="75dp"
        android:textSize="50dp"
        android:textAllCaps="false"
        android:textColor="#0015ff"
        android:layout_below="@+id/resultTextView"
        android:layout_alignLeft="@+id/resultTextView"
        android:layout_alignStart="@+id/resultTextView"
        android:onClick="resetButtonClicked" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:rowCount="4"
        android:minHeight="32dp"
        android:columnCount="4"
        android:background="#ffffff"
        android:layout_gravity="center_vertical|fill_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/plusButton"
            android:width="95dp"
            android:height="110dp"
            android:textAllCaps="false"
            android:textSize="45dp"
            android:textColor="#0015ff"
            android:background="#ffffff"
            android:layout_gravity="left"
            android:onClick="onClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/minusButton"
            android:width="95dp"
            android:height="110dp"
            android:textSize="45dp"
            android:textColor="#0015ff"
            android:background="#ffffff"
            android:layout_gravity="left"
            android:onClick="onClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:id="@+id/multiplyButton"
            android:width="95dp"
            android:height="110dp"
            android:textSize="45dp"
            android:textColor="#0015ff"
            android:background="#ffffff"
            android:layout_gravity="left"
            android:onClick="onClick" />/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รท"
            android:id="@+id/divideButton"
            android:width="95dp"
            android:height="110dp"
            android:textSize="45dp"
            android:textColor="#0015ff"
            android:background="#ffffff"
            android:layout_gravity="left"
            android:onClick="onClick" />/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/nineButton"
            android:width="95dp"
            android:height="110dp"
            android:textSize="45dp"
            android:textColor="#0015ff"
            android:background="#ffffff"
            android:onClick="onClick" />/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/eightButton"
            android:width="95dp"
            android:height="110dp"
            android:textSize="45dp"
            android:textColor="#0015ff"
            android:background="#ffffff"
            android:onClick="onClick" />/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/sevenButton"
            android:width="95dp"
            android:height="110dp"
            android:textSize="45dp"
            android:textColor="#0015ff"
            android:background="#ffffff"
            android:onClick="onClick" />/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/sixButton"
            android:width="95dp"
            android:height="110dp"
            android:textSize="45dp"
            android:textColor="#0015ff"
            android:background="#ffffff"
            android:onClick="onClick" />/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/fiveButton"
            android:width="95dp"
            android:height="110dp"
            android:textSize="45dp"
            android:textColor="#0015ff"
            android:background="#ffffff"
            android:onClick="onClick" />/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/fourButton"
            android:width="95dp"
            android:height="110dp"
            android:textSize="45dp"
            android:textColor="#0015ff"
            android:background="#ffffff"
            android:onClick="onClick" />/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/threeButton"
            android:width="95dp"
            android:height="110dp"
            android:textSize="45dp"
            android:textColor="#0015ff"
            android:background="#ffffff"
            android:onClick="onClick" />/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/twoButton"
            android:width="95dp"
            android:height="110dp"
            android:textSize="45dp"
            android:textColor="#0015ff"
            android:background="#ffffff"
            android:onClick="onClick" />/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/oneButton"
            android:width="95dp"
            android:height="110dp"
            android:textSize="45dp"
            android:textColor="#0015ff"
            android:background="#ffffff"
            android:onClick="onClick" />/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/zeroButton"
            android:width="95dp"
            android:height="110dp"
            android:textSize="45dp"
            android:textColor="#0015ff"
            android:background="#ffffff"
            android:onClick="onClick" />/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/dotButton"
            android:width="95dp"
            android:height="110dp"
            android:textSize="45dp"
            android:textColor="#0015ff"
            android:background="#ffffff"
            android:onClick="onClick" />/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/equalsButton"
            android:width="95dp"
            android:height="110dp"
            android:textSize="45dp"
            android:textColor="#0015ff"
            android:background="#ffffff"
            android:onClick="onClick" />/>
    </GridLayout>

</RelativeLayout>
